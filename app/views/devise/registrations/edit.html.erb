<div class="container w-50">

<h2 class="text-center m-5">Modifie ton profile</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>
      <div class="form--input-container d-flex justify-content-between">
        <div class="names">
          <%= f.input :first_name,
                      label: "Prénom",
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "first_name" } %>
        </div>

        <div class="names">
          <%= f.input :last_name,
                      label: "Nom de famille",
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "last_name" }%>
        </div>
      </div>
    <%= f.input :photo, as: :file %>
    <%= f.input :password,
                label: "Mot de passe",
                hint: "A laisser vide s'il n'y a pas de modification",
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                label: "Confirmation du mot de passe",
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :current_password,
                label: "Mot de passe actuel",
                hint: "On a besoin de ton mot de passe pour confimer les modifications",
                required: true,
                input_html: { autocomplete: "current-password" } %>
  </div>

  <div class="form-actions d-flex justify-content-center">
    <%= f.button :submit, "Mise à jour", class: "btn btn-dark-green-form" %>
  </div>

  <div class="form-actions d-flex justify-content-center">
    <%= link_to "Retour", :back, class:"btn btn-dark-green-form my-2" %>
  </div>
<% end %>


<div>
<%= button_to "Suppression du compte", registration_path(resource_name), class: "btn btn-red", data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>

</div>
