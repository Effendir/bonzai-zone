<div class="navbar navbar-expand-sm navbar-lewagon shadow-sm p-3 rounded">
  <div class="container-fluid">
    <div class="d-flex">
      <%= link_to "", class: "navbar-brand mr-3" do %>
        <%= image_tag "https://cdn-icons-png.flaticon.com/512/7865/7865002.png" %>
      <% end %>
      <% if user_signed_in? %>
        <h3>Bonjour <%= current_user.first_name %></h3>
      <% end %>
    </div>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item active my-2">
            <%= link_to "Page d'accueil", root_path, class: "nav-link link" %>
          </li>
          <li class="nav-item my-2">
            <%= link_to "Annonces de bonzais", bonzais_path, class: "nav-link link" %>
          </li>
          <li class="nav-item my-2">
            <%= link_to "Créer une annonce", new_bonzai_path, class: "nav-link link" %>
